generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model trades {
  trade_id               Int      @id @default(autoincrement())
  user_id                Int      @default(autoincrement())
  type                   Int
  currency               String   @db.VarChar(20)
  trade_time             DateTime @db.Timestamp(6)
  trade_type             String   @db.VarChar(20)
  credit_debit           Boolean
  current_wallet_balance Float
  users                  users    @relation(fields: [user_id], references: [user_id], onDelete: NoAction, onUpdate: NoAction)
}

model users {
  user_id        Int      @id @default(autoincrement())
  email          String   @unique @db.VarChar(255)
  password       String   @db.VarChar(12)
  wallet_balance Float
  trades         trades[]
}
